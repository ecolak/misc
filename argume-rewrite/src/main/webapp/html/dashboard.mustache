{{> src/main/webapp/html/partials/header}}
<div class="container">
	<div class="content">
		<div class="page-header">
			<h3>Argume aktiviteniz</h3>
		</div>
		<p><strong>Argume skoru:</strong> <span class="badge badge-info">{{content.argumeScore}}</span></p>
		 
		<table class="table table-hover">
			{{#content.objects}}
			<tr>
				<td>
					{{summary}}
					{{#body}}
						<a name="summary-link" style="cursor: pointer">
							<span style="color: #999"><small>Devamı</small></span>
						</a> 
						<br/> 
						<div style="display: none"><small>{{{body}}}</small></div>
					{{/body}}				 
				</td>
				<td><span class="badge badge-success">{{likes}}</span></td>
				<td><span class="badge badge-important">{{dislikes}}</span></td>
				<td><span name="argument-date-created">{{dateCreated}}</span></td>
			</tr>
			{{/content.objects}}
		</table>
		
		{{#content.showNextPage}}
    	<div class="text-center">
			<a href="/dashboard?limit={{content.nextLimit}}" class="btn btn-info btn-mini">Öncekiler</a>
		</div>
    	{{/content.showNextPage}}
		
	</div>	
</div>
{{> src/main/webapp/html/partials/footer}}
<script src="/js/dashboard.js"></script>