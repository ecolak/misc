{{> src/main/webapp/html/partials/header}}
<div class="container">
	<div class="content">
		<div class="page-header">
			<h1>Argüman Listesi</h1>
		</div>
		
		<div>
			<div class="text-right">
				<form id="argument-status-form" method="GET">
					<select id="argument-status-dropdown" name="verified">
						<option disabled="disabled">Onay</option>
						<option value="">Hepsi</option>
						<option value="false">Onay bekliyor</option>
						<option value="true">Onaylandı</option>
					</select>
				</form>
			</div>
			<table class="table table-striped" id="arguments-table">
				<tr>
					<th>Özet</th><th>Haber</th><th>Taraf</th><th>Zaman</th><th>Onay</th>
				</tr>
				
				{{#content.objects}}
				<tr>
					<td><a href="/admin/arguments/{{id}}">{{summary}}</a></td>
					<td><a href="/admin/articles/{{articleId}}">{{articleId}}</a></td>
					<td>{{affirmativeInTurkish}}</td>
					<td><span name="argument-date-created">{{dateCreated}}</span></td>
					<td>{{verifiedInTurkish}}</td>
				</tr>			
				{{/content.objects}}
			</table>
			<div class="text-center" id="admin-articles-spinner" style="display: none">
				<i class="icon-spinner icon-spin icon-4x"></i>
			</div>
			
			{{#content.showNextPage}}
	    	<div class="text-center">
				<a class="btn btn-info btn-mini" id="next-page-btn"
					data-page="{{content.page}}" 
					data-pagesize="{{content.pageSize}}"
					data-totalpages="{{content.totalPages}}">Diğerleri
				</a>
			</div>
	    	{{/content.showNextPage}}
		</div>
	</div>	
</div>
{{> src/main/webapp/html/partials/footer}}
<script src="/js/admin/arguments.js"></script>