{{> src/main/webapp/html/partials/header}}
<div class="container">
	<div class="content">
		<div class="page-header">
			<h1>Haber Ekle</h1>
		</div>
		<div>
			<form class="form-horizontal">
			  <div class="control-group">
			    <label class="control-label">URL</label>
			    <div class="controls">
			    	<input type="text" class="input-block-level" required>
			    </div>
			  </div>
			  <div class="control-group">
			  	<div class="controls">
			    	<button class="btn btn-primary" id="submit-button">Kaydet</button>
				</div>
			  </div>
			</form>
			<hr/>
			<form class="form-horizontal" id="save-article-form">
			  <div class="control-group">
			    <label class="control-label">Başlık</label>
			    <div class="controls">
			      <input type="text" id="title" class="input-xxlarge" value="{{content.title}}" required>
			    </div>
			  </div>
			  <div class="control-group">
			    <label class="control-label">Foto</label>
			    <div class="controls">
			      <input type="text" id="img_url" class="input-xxlarge" value="{{content.imgUrl}}">
			    </div>
			  </div>
			  <div class="control-group">
			    <label class="control-label">Anasayfa fotosu</label>
			    <div class="controls">
			      <input type="text" id="img2_url" class="input-xxlarge" value="{{content.img2Url}}">
			    </div>
			  </div>
			  <div class="control-group">
			    <label class="control-label">Kaynak</label>
			    <div class="controls">
			      <input type="text" id="source" value="{{content.source}}" required>
			    </div>
			  </div>
			  <div class="control-group">
			    <label class="control-label">Yer</label>
			    <div class="controls">
			      <input type="text" id="location" value="{{content.location}}">
			    </div>
			  </div>
			  <div class="control-group">
			    <label class="control-label">Haber</label>
			    <div class="controls">
			      <textarea id="body" rows="10" class="input-block-level" required>{{content.body}}</textarea>
			    </div>
			  </div>
			  <div class="control-group">
			    <label class="control-label">Onay</label>
			    <div class="controls">
			      {{#content.verified}}
			     	 <input type="checkbox" id="verified" checked>
			      {{/content.verified}}
			      {{^content.verified}}
			     	 <input type="checkbox" id="verified">
			      {{/content.verified}}
			    </div>
			    
			  </div>
			  <div class="control-group">
			  	<div class="controls">
			    	<button class="btn btn-primary" id="submit-button" type="submit">Kaydet</button>
			    	{{#content.id}}
			    	<button class="btn" id="delete-button">Sil</button>
			    	{{/content.id}}
			    </div>
			  </div>
			  <input type="hidden" id="article-id" value="{{content.id}}">
			</form>
		</div>
		<div class="alert text-center" id="save-article-msg-container" style="display: none"></div>	
		
	</div>	
</div>
{{> src/main/webapp/html/partials/footer}}
<script src="/js/admin/save_article.js"></script>